.integral-settlement {
  overflow: hidden;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}
.integral-settlement .contain {
  background-color: #fff;
  border-radius: 14rpx;
  margin: 20rpx 20rpx 0;
  overflow: hidden;
}
.integral-settlement .settlement-main .address {
  min-height: 164rpx;
  padding: 20rpx 24rpx;
}
.integral-settlement .settlement-main .order-goods .goods {
  padding: 30rpx 24rpx;
  border-bottom: 1px solid #E5E5E5;
}
.integral-settlement .settlement-main .order-goods .goods .goods-info .goods-name {
  line-height: 40rpx;
  height: 80rpx;
}
.integral-settlement .settlement-main .total-goods {
  padding: 20rpx 24rpx;
}
.integral-settlement .settlement-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  padding: 0 30rpx;
  box-sizing: content-box;
  padding-bottom: env(safe-area-inset-bottom);
}
.integral-settlement .settlement-footer .submit-btn {
  color: #fff;
}
.red_theme .integral-settlement .settlement-footer .submit-btn {
  background-color: #ff2c3c;
}
.orange_theme .integral-settlement .settlement-footer .submit-btn {
  background-color: #f7971e;
}
.pink_theme .integral-settlement .settlement-footer .submit-btn {
  background-color: #fa444d;
}
.gold_theme .integral-settlement .settlement-footer .submit-btn {
  background-color: #e0a356;
}
.blue_theme .integral-settlement .settlement-footer .submit-btn {
  background-color: #2f80ed;
}
.green_theme .integral-settlement .settlement-footer .submit-btn {
  background-color: #2ec840;
}

