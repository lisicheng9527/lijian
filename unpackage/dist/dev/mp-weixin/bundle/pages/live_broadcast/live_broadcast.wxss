.live-broadcast .broadcast-list {
  padding: 20rpx 20rpx 0;
  overflow: hidden;
}
.live-broadcast .broadcast-list .broadcast-item {
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #fff;
}
.live-broadcast .broadcast-list .broadcast-item:not(:last-of-type) {
  margin-bottom: 20rpx;
}
.live-broadcast .broadcast-list .broadcast-item .img-wrap {
  height: 300rpx;
  position: relative;
  color: #fff;
}
.live-broadcast .broadcast-list .broadcast-item .img-wrap .tag {
  position: absolute;
  top: 0;
  border-radius: 0 60rpx 60rpx 0;
  background: #ccc;
  padding: 8rpx 20rpx;
}
.live-broadcast .broadcast-list .broadcast-item .img-wrap .tag .live-img {
  width: 30rpx;
  height: 30rpx;
}
.live-broadcast .broadcast-list .broadcast-item .img-wrap .tag.active {
  background: linear-gradient(#ff2c3c 0%, #f95f2f 100%);
}
.live-broadcast .broadcast-list .broadcast-item .img-wrap .tag .circel {
  display: inline-block;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 50%;
}
.live-broadcast .broadcast-list .broadcast-item .img-wrap .tips {
  position: absolute;
  background: linear-gradient(rgba(255, 255, 255, 0) 0%, #808080 100%);
  bottom: 0;
  width: 100%;
  font-weight: 500;
  font-size: 30rpx;
  padding: 42rpx 20rpx 16rpx;
}
.live-broadcast .broadcast-list .broadcast-item .info {
  padding: 20rpx;
}

