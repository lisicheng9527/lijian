page {
  background-color: #ff2f46;
}
.container {
  width: 100%;
  padding-top: 300rpx;
  padding-bottom: 50rpx;
  background-size: 100% auto !important;
  background-repeat: no-repeat;
}
.container .header .choujiang-btn1 {
  color: #7d350c;
  background-color: #fef0b5;
  border-radius: 40rpx 0 0 40rpx;
  box-shadow: 0px 3px 10px #f95f2f;
  padding: 15rpx 24rpx 15rpx 32rpx;
}
.container .section {
  padding: 0 30rpx;
}
.container .section .box-wrap {
  width: 690rpx;
  padding: 27rpx 28rpx;
  border-radius: 30rpx;
  background: #ed3720;
  border: 12rpx solid #fe6847;
}
.container .section .box-wrap .notice {
  margin: 0 24rpx;
  height: 58rpx;
  padding: 12rpx 0;
  border-radius: 29rpx;
  background: #d30c16;
  border: 2rpx solid #edb17d;
}
.container .section .box-wrap .notice image {
  width: 32rpx;
  height: 32rpx;
}
.container .section .box-wrap .message {
  margin: 30rpx 10rpx 0 10rpx;
  color: #fef0b5;
}
.container .section .box-wrap .message image {
  width: 28rpx;
  height: 30rpx;
}
.container .section .box-wrap .turntable {
  width: 610rpx;
  height: 610rpx;
  overflow: hidden;
  border-radius: 20rpx;
  padding: 35rpx 38rpx;
  background-size: 100% auto !important;
}
.container .section .box-wrap .num-tips {
  color: #fbccc7;
  margin: 16rpx 0;
  text-align: center;
}
.container .section .box-wrap .rule {
  color: #fcd7d2;
  font-size: 26rpx;
  padding: 30rpx 16rpx 30rpx 28rpx;
  border-radius: 20rpx;
  background: #d30c16;
}
.container .footer {
  color: #fff2d9;
  padding: 30rpx 0;
  text-align: center;
  font-size: 24rpx;
}
.container .result-popup {
  text-align: center;
  border-radius: 20rpx;
}
.container .result-popup .result-container {
  width: 500rpx;
  height: 600rpx;
  background-size: 100% 100%;
  background-color: white;
  border-radius: 20rpx;
}
.container .result-popup .result-container .img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 20rpx;
}
.container .result-popup .result-container .btn {
  color: white;
  background-color: red;
  border-radius: 50rpx;
  width: 200rpx;
  padding: 20rpx;
}
.container .get-btn {
  width: 320rpx;
  height: 70rpx;
  color: #7b3200;
  background: linear-gradient(180deg, #fef0b0 0%, #ffa92e 100%);
}
.container .prize-contain {
  position: relative;
}
.container .prize-contain .prize {
  position: absolute;
  width: 250rpx;
  height: 92rpx;
  top: -15rpx;
  left: 50%;
  margin-left: -125rpx;
}
.container .prize-contain .prize-item {
  margin-top: 10rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #f7f7f72e;
  color: white;
}
.container .prize-contain .prize-item .img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
}

