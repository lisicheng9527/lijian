.goods-list {
  margin-top: 20rpx;
}
.goods-item {
  background-color: #FFFFFF;
  padding: 0rpx 24rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.goods-item .start-time {
  font-family: "PingFang SC";
  font-weight: normal;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #E5E5E5;
}
.red_theme .goods-item .start-time .desc {
  color: #FF2C3C;
}
.orange_theme .goods-item .start-time .desc {
  color: #f7971e;
}
.pink_theme .goods-item .start-time .desc {
  color: #fa444d;
}
.gold_theme .goods-item .start-time .desc {
  color: #e0a356;
}
.blue_theme .goods-item .start-time .desc {
  color: #2f80ed;
}
.green_theme .goods-item .start-time .desc {
  color: #2ec840;
}
.goods-item .start-time .desc-fail {
  color: #999;
}
.goods-item .centent {
  padding-bottom: 30rpx;
}
.goods-item .centent .goods-info {
  width: 450rpx;
  height: 180rpx;
  box-sizing: border-box;
}
.goods-item .centent .goods-info .goods-name {
  font-family: "PingFang SC";
  font-weight: normal;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: left;
  color: #333;
}
.goods-item .centent .goods-info .condition {
  font-family: "PingFang SC";
  font-weight: normal;
  font-size: 22rpx;
  text-align: left;
  color: #ffa200;
}
.goods-item .centent .goods-info .sale-info {
  padding: 4rpx 16rpx;
}
.goods-item .footer {
  padding: 19rpx 0;
  border-top: 1rpx solid #E5E5E5;
}
.goods-item .footer .btn {
  padding: 13rpx 45rpx;
  font-family: "PingFang SC";
  font-weight: normal;
  font-size: 28rpx;
  line-height: 42rpx;
  width: 200rpx;
  height: 62rpx;
  border-radius: 31rpx;
}
.red_theme .goods-item .footer .btn {
  background-image: linear-gradient(90deg, #F95F2F 0%, #FF2C3C 100%);
}
.orange_theme .goods-item .footer .btn {
  background-image: linear-gradient(90deg, #ffd200 0%, #f7971e 100%);
}
.pink_theme .goods-item .footer .btn {
  background-image: linear-gradient(90deg, #fd498f 0%, #fa444d 100%);
}
.gold_theme .goods-item .footer .btn {
  background-image: linear-gradient(90deg, #ebc389 0%, #e0a356 100%);
}
.blue_theme .goods-item .footer .btn {
  background-image: linear-gradient(90deg, #56ccf2 0%, #2f80ed 100%);
}
.green_theme .goods-item .footer .btn {
  background-image: linear-gradient(90deg, #3de650 0%, #2ec840 100%);
}

