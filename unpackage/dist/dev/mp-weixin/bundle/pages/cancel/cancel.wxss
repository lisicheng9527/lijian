page {
  background-color: #fff;
  height: 100%;
  padding-bottom: 0;
}
.cancel {
  padding: 42rpx;
  font-size: 32rpx;
  padding-bottom: 0;
}
.cancel_btn {
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  font-size: 28rpx;
  position: fixed;
  bottom: env(safe-area-inset-bottom);
  bottom: constant(safe-area-inset-bottom);
  left: 42rpx;
  right: 42rpx;
}
.red_theme .cancel_btn {
  background-color: #ff2c3c;
}
.orange_theme .cancel_btn {
  background-color: #f7971e;
}
.pink_theme .cancel_btn {
  background-color: #fa444d;
}
.gold_theme .cancel_btn {
  background-color: #e0a356;
}
.blue_theme .cancel_btn {
  background-color: #2f80ed;
}
.green_theme .cancel_btn {
  background-color: #2ec840;
}
.cancel .popup_header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  padding: 0 30rpx;
  font-weight: 500;
  font-size: 30rpx;
  background-color: #ffffff;
}
.cancel .popup_body {
  padding: 42rpx;
  font-size: 30rpx;
}
.cancel .popup_body .tip {
  font-weight: 500;
}
.cancel .popup_body_container {
  margin-top: 30rpx;
  background-color: #f7f7f7;
  padding: 42rpx;
}
.cancel .popup_body .btn_comfirm {
  border-radius: 50rpx;
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
}
.cancel .popup_body .btn_cancel {
  border-radius: 50rpx;
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  border: 1px solid #e6e6e6;
}

