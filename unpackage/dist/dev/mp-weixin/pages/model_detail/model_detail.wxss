page {
  height: 100%;
  padding: 0;
}
.model-detail {
  padding: 0 30rpx;
}
.model-detail .media .media-title {
  padding: 30rpx 0;
  font-size: 48rpx;
}
.model-detail .media .media-list {
  display: flex;
  flex-direction: column;
}
.model-detail .media .media-list .video-container {
  width: 100%;
}
.model-detail .media .media-list .image-container {
  width: 100%;
  border: 1rpx solid #ccc;
  margin-bottom: 30rpx;
  border-radius: 5px;
  background-color: #fff;
  overflow: hidden;
  padding: 20rpx;
}
.model-detail .media .media-list .image-container .image {
  width: 100%;
}
.model-detail .media .media-list .image-container .image-text {
  text-align: center;
  padding-top: 20rpx;
}
.model-detail .media-btn {
  display: flex;
  justify-content: space-between;
  padding-bottom: 30rpx;
}

