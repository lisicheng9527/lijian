/*根元素需要有固定的高度*/
page {
  height: 100%;
  box-sizing: border-box;
  /*需给父元素设置height:100%*/
}
page .category-pages {
  height: 100%;
  display: flex;
  flex-direction: column;
  background-repeat: no-repeat;
  background-size: 100% auto;
  /* 中间 */
}
page .category-pages .category {
  flex: 1;
  min-width: 0;
  min-height: 0;
  /* 需给flex:1的元素加上最小高,否则内容超过会溢出容器 (如:小程序Android真机) */
  display: flex;
  flex-direction: column;
}

