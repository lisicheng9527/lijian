.forget-pwd {
  padding: 60rpx;
}
.forget-pwd-text {
  font-size: 38rpx;
}
.forget-pwd .input {
  border: 1px solid #d7d7d7;
  height: 100rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
}
.forget-pwd-btn {
  margin-top: 40rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  border-radius: 12rpx;
}
.red_theme .forget-pwd-btn {
  background-color: #ff2c3c;
}
.orange_theme .forget-pwd-btn {
  background-color: #f7971e;
}
.pink_theme .forget-pwd-btn {
  background-color: #fa444d;
}
.gold_theme .forget-pwd-btn {
  background-color: #e0a356;
}
.blue_theme .forget-pwd-btn {
  background-color: #2f80ed;
}
.green_theme .forget-pwd-btn {
  background-color: #2ec840;
}
.forget-pwd .sms-btn {
  text-align: center;
  border-left: 1px solid #E5E5E5;
}
.red_theme .forget-pwd .sms-btn {
  color: #FF2C3C;
}
.orange_theme .forget-pwd .sms-btn {
  color: #f7971e;
}
.pink_theme .forget-pwd .sms-btn {
  color: #fa444d;
}
.gold_theme .forget-pwd .sms-btn {
  color: #e0a356;
