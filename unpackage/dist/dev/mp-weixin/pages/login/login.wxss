page {
  background-color: #fff;
  height: 100%;
  padding-bottom: 0;
}
.login {
  padding: 60rpx;
  padding-top: 80rpx;
}
.login-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}
.login .logo {
  height: 260rpx;
  width: 260rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}
.login .login-btn {
  margin-top: 40rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  border-radius: 12rpx;
}
.red_theme .login .login-btn-user {
  background-color: #ff2c3c;
}
.orange_theme .login .login-btn-user {
  background-color: #f7971e;
}
.pink_theme .login .login-btn-user {
  background-color: #fa444d;
}
.gold_theme .login .login-btn-user {
  background-color: #e0a356;
}
.blue_theme .login .login-btn-user {
  background-color: #2f80ed;
}
.green_theme .login .login-btn-user {
  background-color: #2ec840;
}
.login .login-btn-mobile {
  background: white;
  color: black;
  border: 1px solid #bbb;
}
.login .input {
  border: 1px solid #d7d7d7;
  height: 100rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
}
.login .forget-btn {
  border-left: 1px solid #E5E5E5;
}
.login .sms-btn {
  text-align: center;
  border-left: 1px solid #E5E5E5;
}
.red_theme .login .sms-btn {
  color: #FF2C3C;
}
.orange_theme .login .sms-btn {
  color: #f7971e;
}
.pink_theme .login .sms-btn {
  color: #fa444d;
}
.gold_theme .login .sms-btn {
  color: #e0a356;
}
.blue_theme .login .sms-btn {
  color: #2f80ed;
}
.green_theme .login .sms-btn {
  color: #2ec840;
}
.comfirm-box {
  text-align: center;
  padding: 60rpx 0 70rpx 0;
}
.red_theme .agreement {
  color: #FF2C3C;
}
.orange_theme .agreement {
  color: #f7971e;
}
.pink_theme .agreement {
  color: #fa444d;
}
.gold_theme .agreement {
  color: #e0a356;
}
.blue_theme .agreement {
  color: #2f80ed;
}
.green_theme .agreement {
  color: #2ec840;
}
.disabled {
  opacity: 0.5;
}

