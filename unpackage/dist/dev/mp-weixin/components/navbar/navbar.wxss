.navbar .navbar-left {
  display: flex;
  padding: 12rpx 25rpx;
  border-radius: 30px;
  background: rgba(255, 255, 255, 0.3);
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}
.navbar .navbar-left .line {
  width: 1px;
  height: 36rpx;
  background: rgba(0, 0, 0, 0.2);
  margin: 0 25rpx;
}
.navbar .navbar-left .navbar-lists {
  display: flex;
  justify-content: center;
  position: relative;
}
.navbar .navbar-left .navbar-lists .navbar-float {
  position: absolute;
  top: 40px;
  width: 258rpx;
  padding: 0 24rpx;
  background: #fff;
  border-radius: 14rpx;
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.06);
}
.navbar .navbar-left .navbar-lists .navbar-float::before {
  content: '';
  display: block;
  position: absolute;
  left: 50%;
  width: 0;
  height: 0;
  border: 14rpx solid transparent;
  border-bottom-color: #fff;
  -webkit-transform: translate(-50%, -100%);
          transform: translate(-50%, -100%);
}
.navbar .navbar-left .navbar-lists .navbar-float .float-item {
  padding: 20rpx 0;
  display: flex;
  align-items: center;
}
.navbar .navbar-left .navbar-lists .navbar-float .float-item:not(:last-of-type) {
  border-bottom: 1px solid #e5e5e5;
}
.navbar .mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

